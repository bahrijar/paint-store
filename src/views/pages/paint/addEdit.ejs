<!DOCTYPE html>
<html lang="en">
	<%- include('../../layouts/head.ejs') %>
	<body>
		<div class="container-fluid overflow-hidden">
			<div class="row vh-100 overflow-auto gx-5">
				<!-- Sidebar  -->
				<%- include('../../layouts/sidebar.ejs') %>

				<!-- Content -->
				<div class="col d-flex flex-column h-sm-100">
					<main class="row overflow-auto">
						<div class="col pt-4">
							<h3><%= isCreateMode ? 'Create Paint' : 'Edit Paint' %></h3>
						</div>
						<div class="row mt-4">
							<div class="col-md-6">
								<div class="card">
									<div class="card-body">
										<form
											action="<%= isCreateMode && result === null ? '/paints/create' : '/paints/edit/' + result.id %>"
											method="post"
										>
											<div class="mb-3">
												<label for="image" class="form-label">Image Url</label>
												<input
													type="text"
													name="image"
													class="form-control"
													id="image"
													value="<%= result && result.image %>"
												/>
											</div>

											<div class="mb-3">
												<label for="name" class="form-label">Name</label>
												<input
													type="text"
													name="name"
													class="form-control"
													id="name"
													value="<%= result && result.name %>"
												/>
											</div>

											<div class="mb-3">
												<label for="price" class="form-label">Price</label>
												<input
													type="number"
													name="price"
													class="form-control"
													id="price"
													value="<%= result && result.price %>"
												/>
											</div>

											<div class="mb-3">
												<label for="stock" class="form-label">Stock</label>
												<input
													type="text"
													name="stock"
													class="form-control"
													id="stock"
													value="<%= result && result.stock %>"
												/>
											</div>

											<div class="mb-3">
												<label class="form-label">Category</label>
												<select name="CategoryId" class="form-select">
                          <option  hidden disabled selected value>-- Select Category --</option>
													<% categories.forEach(category => { %>
													<option
														value="<%=category.id%>"
														<%= result && result.CategoryId === category.id ? "selected" : "" %>
													>
														<%=category.name%>
													</option>
													<% }); %>
												</select>
											</div>

											<div class="d-flex justify-content-between">
												<a
													href="/paints"
													class="btn btn-link mt-3 text-decoration-none"
												>
													Back
												</a>
												<button type="submit" class="btn btn-primary mt-3">
													<% if (isCreateMode) { %>
													<div>
														<span><i class="fa fa-plus"></i></span> Create
													</div>
													<% } else { %>
													<div>
														<span class="me-3"
															><i class="fa fa-pencil"></i
														></span>
														Edit
													</div>
													<% } %>
												</button>
											</div>
										</form>
									</div>
								</div>
							</div>
						</div>
					</main>
					<%- include('../../layouts/footer.ejs') %>
				</div>
			</div>
		</div>

		<%- include('../../includes/script.ejs') %>
	</body>
</html>
