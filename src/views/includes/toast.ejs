<% if(successMessage){ %>
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
	<div
		id="liveToast"
		class="toast bg-success text-white"
		role="alert"
		aria-live="assertive"
		aria-atomic="true"
	>
		<div class="d-flex">
			<div class="toast-body"><%=successMessage%></div>
			<button
				type="button"
				class="btn-close me-2 m-auto"
				data-bs-dismiss="toast"
				aria-label="Close"
			></button>
		</div>
	</div>
</div>
<% } %> <% if(errorMessage){ %>
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
	<div
		id="liveToast"
		class="toast bg-danger text-white"
		role="alert"
		aria-live="assertive"
		aria-atomic="true"
	>
		<div class="d-flex">
			<div class="toast-body"><%=errorMessage%></div>
			<button
				type="button"
				class="btn-close me-2 m-auto"
				data-bs-dismiss="toast"
				aria-label="Close"
			></button>
		</div>
	</div>
</div>
<% } %>
